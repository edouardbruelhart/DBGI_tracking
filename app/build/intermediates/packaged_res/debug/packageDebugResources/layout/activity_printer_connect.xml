<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    tools:context=".PrinterConnectActivity">

    <TextView
        android:id="@+id/connectText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to connect a brady printer?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <TextView
        android:id="@+id/compatibleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Compatible models: M211 and M511"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"
        tools:ignore="HardcodedText,MissingConstraints" />

    <Button
        android:id="@+id/connectButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/ignoreButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"
        android:textSize="18sp"
        android:layout_marginBottom="40dp"
        tools:ignore="HardcodedText" />

</LinearLayout>
